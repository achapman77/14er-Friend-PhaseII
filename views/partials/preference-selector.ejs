        <div id="preference-box" class="mt-5">
            <form>
                <div class="form-group question-template question">
                    <div class="row">
                        <div class="col-2 label-box">
                            <label>Minimum Temperature</label>
                        </div>
                        <div id="min-temp-box" class="col-8 text-center input-box">
                            <input id="min-temp-slider" class="custom-slider" type="text"/>
                        </div>
