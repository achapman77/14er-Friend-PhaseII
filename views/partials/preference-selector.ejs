<section id="preferences" class="mt-8 spec-text">    
    <div class="container glass">
        <div id="toggle-preference-box" class="row align-items-center justify-content-end">
            <div class="col-11">
                <!-- Insert First name into h4? -->
                <h4 class="ls-25 mb-0">Climbing Preferences</h4>
            </div>
            <div class="col-1 text-right">
                <i id="preference-btn" role="button" class="fas  fa-plus-square fa-minus-square fa-2x"></i>
            </div>
