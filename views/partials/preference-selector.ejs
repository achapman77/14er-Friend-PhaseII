        <div id="preference-box" class="mt-5">
            <form>
                <div class="form-group question-template question">
                    <div class="row">
                        <div class="col-md-3 label-box">
                            <label id="q-i">Minimum Temperature (F)</label>
                        </div>
                        <div class="col-md-9 text-center input-box">
                            <input id="min-temp-slider" class="custom-slider" type="text" data-slider-ticks="[-20, -10, 0, 10, 20, 30, 40, 50, 60]" data-slider-ticks-snap-bounds="5" data-slider-ticks-labels='["-20", "-10", "0", "10", "20", "30", "40", "50", "60"]' data-slider-value="-20"/>
                        </div>
                    </div>
                </div>
                <div class="form-group question-template question">
                    <div class="row">
                        <div class="col-md-3 label-box">
                            <label id="q-i">Maximum Wind Speeds (mph)</label>
                        </div>
                        <div class="col-md-9 text-center input-box">
                            <input id="max-wind-slider" class="custom-slider" type="text" data-slider-ticks="[0, 10, 20, 30, 40, 50, 60, 70, 80]" data-slider-ticks-snap-bounds="5" data-slider-ticks-labels='["0", "10", "20", "30", "40", "50", "60", "70", "80"]' data-slider-value="0"/>
                        </div>
                    </div>
                </div>
                <div class="form-group question-template question">
                    <div class="row">
                        <div class="col-md-3 label-box">
                            <label id="q-i">Maximum Chance <br>of Precipitation (%)</label>
                        </div>
                        <div class="col-md-9 text-center input-box">
                            <input id="max-precip-slider" class="custom-slider" type="text" data-slider-ticks="[0, 10, 20, 30, 40, 50, 60, 70, 80]" data-slider-ticks-snap-bounds="5" data-slider-ticks-labels='["0", "10", "20", "30", "40", "50", "60", "70", "80"]' data-slider-value="0"/>
                        </div>
                    </div>
                </div>
                <div class="form-group question-template question">
                    <div class="row">
                        <div class="col-md-3 label-box">
                            <label id="q-i">Maximum <br> Distance (mi)</label>
                        </div>
                        <div class="col-md-9 text-center input-box">
                            <input id="max-dist-slider" class="custom-slider" type="text" data-slider-ticks="[0, 50, 100, 150, 200, 250, 300, 350, 400]" data-slider-ticks-snap-bounds="5" data-slider-ticks-labels='["0", "50", "100", "150", "200", "250", "300", "350", "400"]' data-slider-value="0"/>
                        </div>
                    </div>
                </div>
