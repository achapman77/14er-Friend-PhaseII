                            <input id="max-precip-slider" class="custom-slider" type="text"/>
                        </div>
                        <div class="col-2 text-center readout-box">
                            <span class="readout">0</span> %
                        </div>
                    </div>
                </div>
                <div class="form-group question-template question">
                    <div class="row">
                        <div class="col-2 label-box">
                            <label>Max Distance</label>
                        </div>
                        <div id="max-dist-box" class="col-8 text-center input-box">
                            <input id="max-dist-slider" class="custom-slider" type="text"/>
                        </div>
                        <div class="col-2 text-center readout-box">
                            <span class="readout">0</span> mi
                        </div>
                    </div>
                </div>
                <div class="form-group row mt-5">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <button id="preferences-submit-btn" data-userid="<%=user%>"  class="btn btn-outline-light" type="submit">Save</button>
